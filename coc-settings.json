{
  "inlayHint.enable": true,
  "inlayHint.enableParameter": true,
  "inlayHint.position": "inline",
  "inlayHint.refreshOnInsertMode": true,
  "languageserver": {
    "ocaml-lsp": {
      "command": "dune",
      "args": [
        "tools",
        "exec",
        "ocamllsp",
        "--"
      ],
      "filetypes": [
        "ocaml",
        "reason"
      ]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ]
    }
  },
  "snippets.ultisnips.pythonPrompt": false,
  "clangd.path": "/home/linuxbrew/.linuxbrew/bin/clangd"
}
